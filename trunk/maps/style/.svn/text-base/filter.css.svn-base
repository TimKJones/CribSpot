.bar
{
	display: inline-block;
	height: 6px;
	width:100%;
	color:blue;
	background-color: #686868;
	z-index:2;
	-moz-border-radius: 3px;
	border-radius: 3px;
  	-moz-box-shadow: inset 0px 0px 3px black;
   	-webkit-box-shadow: inset 0px 0px 3px black;
   	box-shadow: inset 0px 0px 3px black;
}
.sliderDiv
{
	width:165px;
	display: inline-block;	
}
.filterRangeInputMin
{
	margin-top: 6px;
	margin-left: 47px;
	width: 50px;
	text-align: center;
	font-family: "Trebuchet MS", Helvetica, sans-serif;
}
.filterRangeInputMax
{
	width: 50px;
	text-align: center;
	font-family: "Trebuchet MS", Helvetica, sans-serif;
}
.filterOptionsText
{
	font-size: 14px;
	display: inline-block;
	font-weight: bold;
}
.filterOptions
{
	margin-left: 50px;
}
#rentTermFilter
{
	margin-top:15px;
}
#houseTypeFilter
{
	margin-top:8px;
}
.box
{
	position: absolute;
	border-color: gray;
	border-style: solid;
	border-width: 1px;
	background-color: white;
	width:12px;
	height:12px;
	z-index:2;
	text-align:center;
	-moz-border-radius: 6px;
	border-radius: 6px;
	-moz-box-shadow: 0px 2px 3px gray;
   	-webkit-box-shadow: 0px 2px 3px gray;
   	box-shadow: 0px 2px 3px gray;
}
.box:hover
{
	cursor:hand;
}
