#filterBox
{
	position:absolute;
	z-index:2;
	right:10px;
	top:10px;
	height:133px;
	width:330px;
	background-color: white;
  	-moz-box-shadow: inset 0px 0px 6px gray;
   	-webkit-box-shadow: inset 0px 0px 6px gray;
   	box-shadow: inset 0px 0px 6px gray;
   	font-family: "Trebuchet MS", Helvetica, sans-serif;
}
#filterBoxBackground
{
	position: absolute;
	z-index: 1;
	right: 30px;
	top: 90px;
	height: 156px;
	width: 350px;
	background-color:#EEEEEE;
  	-moz-box-shadow: 10px 10px 20px gray;
   	-webkit-box-shadow: 10px 10px 20px gray;
   	box-shadow: 10px 10px 20px gray;
   	border-radius: 4px;
}
#filterBox #priceIcon
{
	position: absolute;
	background-image: url('../images/filter/price_icon.png');
	background-size: 100%;
	height: 30px;
	width: 30px;
	top: 4px;
	left: 8px;
	background-repeat: no-repeat;
	display: inline-block;
}
