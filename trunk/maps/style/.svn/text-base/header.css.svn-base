body
{
	margin: 0;
}
#container
{
	position: absolute;
	z-index:1;
	height:100%;
	width:100%;
	margin:0px;
}
#topBar
{
	height:50px;
	background-color:white;
	box-shadow: 2px 4px 10px gray;
    -moz-box-shadow: 2px 4px 10px gray;
    -webkit-box-shadow: 2px 4px 10px gray;
    z-index: 3;
    position: relative;
}
.topBarButton
{
	width:90px;
	height:35px;
	float:right;
	margin-right:5px;
	margin-top:5px;
}
#topBarButtonsDiv
{
	display:inline;
	height:50px;
	position: absolute;
	top: 0;
	right: 0;
}
.fb_login
{
	vertical-align:top;
	margin-top:15px;
	top: 0;
	right: 150px;
	float: right;
}
#logout_link
{
	visibility:hidden;
	display:inline-block;
	position: absolute;
	top: 0;
	right: 150px;
}
#auth_logoutlink
{
	text-decoration:none;
}